{
  "$schema": "https://biomejs.dev/schemas/1.8.3/schema.json",
  "files": {
    "ignore": ["node_modules", "dist", ".next", "coverage", "*.config.js", "*.config.ts", ".turbo"]
  },
  "organizeImports": {
    "enabled": true
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "suspicious": {
        "noExplicitAny": "warn"
      },
      "style": {
        "useConst": "error",
        "useTemplate": "warn"
      },
      "complexity": {
        "noForEach": "warn"
      },
      "a11y": {
        "noAccessKey": "error",
        "useAltText": "error",
        "useAnchorContent": "error",
        "useButtonType": "warn",
        "useKeyWithClickEvents": "warn",
        "useValidAriaProps": "error",
        "useSemanticElements": "warn"
      }
    }
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "trailingCommas": "es5",
      "semicolons": "always"
    }
  }
}
