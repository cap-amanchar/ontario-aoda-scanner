{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "types": ["@types/chrome", "@types/react", "@types/react-dom", "bun-types"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "moduleResolution": "bundler",
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*", "scripts/**/*"],
  "exclude": ["node_modules", "dist"]
}
