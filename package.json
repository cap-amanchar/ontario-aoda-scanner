{
  "name": "moderna11y",
  "version": "0.1.0",
  "private": true,
  "description": "Ontario AODA Accessibility Scanner - Chrome Extension & Web App",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "format": "biome format --write .",
    "check": "biome check --write .",
    "type-check": "turbo run type-check",
    "clean": "turbo run clean && rm -rf node_modules"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.8.3",
    "turbo": "^2.0.12",
    "typescript": "^5.5.4"
  },
  "engines": {
    "node": ">=18.0.0",
    "bun": ">=1.0.0"
  },
  "packageManager": "bun@1.1.27"
}
